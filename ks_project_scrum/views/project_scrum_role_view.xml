<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!--    Role Designation FORM VIEW -->
        <record id="view_ks_project_type_form" model="ir.ui.view">
            <field name="name">ks.role.designation.form</field>
            <field name="model">ks.role.designation</field>
            <field name="arch" type="xml">
                <form string="Role Designation">
                    <sheet>
                        <group>
                            <field name="name"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!--     Role Designation TREE VIEW -->
        <record id="view_ks_project_type_tree" model="ir.ui.view">
            <field name="name">ks.role.designation.form</field>
            <field name="model">ks.role.designation</field>
            <field name="arch" type="xml">
                <tree string="Role Designation">
                    <field name="name"/>
                </tree>
            </field>
        </record>
        <!--   Role Designation  Action window -->
        <record id="ks_open_project_type_view" model="ir.actions.act_window">
            <field name="name">Role Designation</field>
            <field name="res_model">ks.role.designation</field>
            <field name="view_mode">tree,form</field>
        </record>

<!--        INHERITING THE EXISTING FORM VIEW FOR 'project.scrum.role' MODEL-->
        <record id="ks_view_scrum_role_form" model="ir.ui.view">
            <field name="name">ks.view.scrum.role.form</field>
            <field name="model">project.scrum.role</field>
            <field name="inherit_id" ref="project_scrum_agile.view_scrum_role_form"/>
            <field name="arch" type="xml">
            <!--Adding new fields and updating label of name field-->
                <xpath expr="//field[@name='name']"  position="attributes">
                     <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='name']" position="replace">
                     <field name="designation_id" required="1"/>
                     <field name="scrum_devteam_id"/>
                     <field name="employee_image" widget="image" class="oe_avatar"/>
                </xpath>
                <xpath expr="//field[@name='person_name']" position="after">
                    <field name="employee_id" required="1"/>
                </xpath>
                <!--Changing the person char field to employee name(related field
                and making it invisible.-->
                <xpath expr="//field[@name='person_name']" position="attributes">
                     <attribute name="invisible">1</attribute>
                </xpath>
                <!--For adding chatter-->
                <xpath expr="//sheet" position="after">
                    <div class="oe_chatter">
                        <field name="message_follower_ids" groups="base.group_user"/>
                        <field name="message_ids"/>
                    </div>
                </xpath>
            </field>
        </record>
        <!-- INHERIT ROLES TREE -->
        <record model="ir.ui.view" id="ks_view_scrum_role_tree">
            <field name="name">ks.view.scrum.role.tree</field>
            <field name="model">project.scrum.role</field>
            <field name="inherit_id" ref="project_scrum_agile.view_scrum_role_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='code']" position="before">
                    <field name="employee_id"/>
                    <field name="designation_id"/>
                </xpath>
                <xpath expr="//field[@name='project_id']" position="before">
                    <field name="scrum_devteam_id"/>
                </xpath>
                <xpath expr="//field[@name='name']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>