<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_public_holidays_tree" model="ir.ui.view">
            <field name="name">holidays.public.tree</field>
            <field name="model">public.holidays</field>
            <field name="arch" type="xml">
                <tree string="Public Holidays">
                <field name="year"/>
                </tree>
            </field>
        </record>
        <record id="view_public_holidays_form" model="ir.ui.view">
            <field name="name">holidays.public.form</field>
            <field name="model">public.holidays</field>
            <field name="arch" type="xml">
                <form string="Public Holidays">
                    <group>
                        <field name="year"/>
                    </group>
                    <newline/>
                    <group string="Public Holidays">
                        <field name="line_ids" nolabel="1">
                            <tree string="Public Holidays" editable="top">
                                <field name="date"/>
                                <field name="name"/>
                            </tree>
                        </field>
                    </group>
                </form>
            </field>
        </record>
            <record id="open_public_holidays_view" model="ir.actions.act_window">
            <field name="name">Public Holidays</field>
            <field name="res_model">public.holidays</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>