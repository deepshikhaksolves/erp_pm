<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="inherits_view_project_scrum_sprint_form" model="ir.ui.view">
            <field name="name">ks.view.project.scrum.sprint.form</field>
            <field name="model">project.scrum.sprint</field>
            <field name="inherit_id" ref="project_scrum_agile.view_project_scrum_sprint_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('oe_button_box')]/button[hasclass('oe_stat_button')]" position="before">
                    <button class="oe_stat_button" name="attachment_tree_view" type="object" icon="fa-file-text-o">
                        <field string="Documents" name="ks_doc_count" widget="statinfo"/>
                    </button>
                    <button class="oe_stat_button" type="object"
                            name="ks_sprint_tasks" icon="fa-tasks">
                        <field string="Tasks" name="sprint_tasks_count" widget="statinfo"/>
                    </button>
                </xpath>
                <!-- Making project_id required field.  -->
                <xpath expr="//field[@name='project_id']" position="attributes">
                     <attribute name="required">1</attribute>
                </xpath>
                <!-- Adding sprint code on form view.    -->
                <xpath expr="//field[@name='name']" position="after">
                    <field name="ks_sprint_code"/>
                    <field name="ks_project_type_id" invisble="1"/>
                </xpath>
                <!--  Internal schedule dates for a sprint.  -->
                <xpath expr="//field[@name='expected_hours']/.." position="after">
                    <group name="ks_sprint_dates">
                        <group string="Internal Dates">
                            <field name="ks_internal_eta_date" required="0"/>
                            <field name="ks_internal_sow_date" required="0"/>
                            <field name="ks_internal_qa_date" required="0"/>
                            <field name="ks_internal_delivery_date" required="0"/>
                            <!-- <field name="ks_internal_uat_date"/> -->
                            <field name="ks_internal_bug_fix_date" required="0"/>
                        </group>
                    </group>
                </xpath>
                <!--  Client commitment dates for a sprint.  -->
                <xpath expr="//group[@name='ks_sprint_dates']" position="inside">
                    <group string="Clients Dates" required="0">
                        <field name="ks_eta_date" required="0"/>
                        <field name="ks_sow_date" required="0"/>
                        <field name="ks_qa_date" required="0"/>
                        <field name="ks_delivery_date" required="0"/>
                        <field name="ks_uat_date" required="0"/>
                        <field name="ks_bug_fix_date" required="0"/>
                    </group>
                </xpath>

                <xpath expr="//notebook/page[last()]" position="after">
                    <page string="Documents" name="sprint_checklist">
                        <field name="ks_project_sprint_checklist_ids" widget="one2many_list">
                            <tree>
                                <field name="name"/>
                                <field name="is_completed" widget="boolean_toggle"/>
                                <field name="attachment" string="Select Files" widget="many2many_tags" />
                                <field name="project_type" invisible="1"/>
                            </tree>
                            <form>
                                <group>
                                    <group>
                                        <field name="name"/>
                                        <field name="is_completed" widget="boolean_toggle"/>
                                        <field name="project_type" invisible="1"/>
                                    </group>
                                    <field name="attachment"
                                           string="Select Files"/>
                                </group>
                            </form>
                        </field>
                    </page>
                </xpath>
                <xpath expr="//field[@name='release_id']" position="replace">
                    <field name="release_id" domain="[('project_id', '=', project_id)]" required="1" context="{'default_project_id': project_id, 'default_date_start': date_start, 'default_date_stop': date_stop}"/>
                </xpath>
                <xpath expr="//field[@name='name']" position="after">
                    <field name="sprint_number" invisible="1"/>
                </xpath>
            </field>
        </record>
        <record id="view_project_project_filter_project" model="ir.ui.view">
            <field name="name">project.project.view.search.inherit</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.view_project_project_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//search" position="inside">
                    <filter string="Date" name="filter_create_date" date="create_date"/>
                </xpath>
            </field>
        </record>
        <record id="view_project_scrum_sprint_tree_project_scrum_agile" model="ir.ui.view">
            <field name="name">project.scrum.sprint.view.form.inherit</field>
            <field name="model">project.scrum.sprint</field>
            <field name="inherit_id" ref="project_scrum_agile.view_project_scrum_sprint_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//tree" position="replace">
                    <tree string="Sprint">
                        <field name="sprint_number" invisible="1"/>
                        <field name="project_id"/>
                        <field name="name"/>
                        <field name="release_id"/>
                        <field name="scrum_master_id"/>
                        <field name="product_owner_id"/>
                        <field name="date_start"/>
                        <field name="date_stop"/>
                        <field name="effective_velocity"/>
                        <field name="progress" widget="progressbar"/>
                        <field name="state"/>
                    </tree>
                </xpath>
            </field>
        </record>
    </data>
</odoo>